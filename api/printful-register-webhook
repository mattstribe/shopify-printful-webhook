// /api/printful-register-webhook.js  (ESM)
export default async function handler(req, res) {
  if (req.method !== "POST") return res.status(405).send("POST only");

  const url = "https://api.printful.com/webhooks";
  const body = {
    url: process.env.PRINTFUL_WEBHOOK_URL,       // where Printful will POST events
    secret: process.env.PRINTFUL_WEBHOOK_SECRET, // we'll verify with this
    types: ["package_shipped", "order_updated"], // add others if you want
    // optional: scope by store
    store_id: Number(process.env.PRINTFUL_STORE_ID),
  };

  try {
    const r = await fetch(url, {
      method: "POST",
      headers: {
        Authorization: `Bearer ${process.env.PRINTFUL_API_TOKEN}`,
        "Content-Type": "application/json",
      },
      body: JSON.stringify(body),
    });
    const text = await r.text();
    return res.status(r.ok ? 200 : 500).send(text);
  } catch (e) {
    return res.status(500).send(String(e));
  }
}
